# uninstall automatic power off

# check if the install script is run by the 'pi' user
if [ `whoami` != pi ]; then
        echo "Please run as 'pi' user"
        exit 1
fi

# turn off pi-shutdown.service, if running (upgrade instead of installation)
sudo systemctl disable pi-shutdown.service

#remove pi-shutdown from /usr/bin
sudo rm /usr/bin/pi-shutdown

# remove pi-shutdown service
sudo rm /lib/systemd/system/pi-shutdown.service

echo "pi-shutdown uninstalled"
